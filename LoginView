    private void UserTxtMousePressed(java.awt.event.MouseEvent evt) {                                     
        if (UserTxt.getText().equals("Email")){ //Si aparece Email, se establecera como vacio
            UserTxt.setText("");
            UserTxt.setForeground(Color.black);       
        } 
        if(String.valueOf(PasswordTxt.getPassword()).isEmpty()){ //Si esta vacio aparecera esos *
            PasswordTxt.setText("***************");
            PasswordTxt.setForeground(new Color(51,51,51));
        }
    }                                    

    private void PasswordTxtMousePressed(java.awt.event.MouseEvent evt) {                                         
        if(UserTxt.getText().isEmpty()){
        UserTxt.setText("Email");
        UserTxt.setForeground(new Color(51,51,51));
        }
        if(String.valueOf(PasswordTxt.getPassword()).equals("***************")){
        PasswordTxt.setText("");      
        PasswordTxt.setForeground(Color.black); 
        }
    }                                        

    private void jPanel2MouseClicked(java.awt.event.MouseEvent evt) {                                     
      
        
      // Capturar datos ingresados por el usuario
    String correo = UserTxt.getText(); // Correo ingresado en el campo de texto
    String contraseña = String.valueOf(PasswordTxt.getPassword()); // Contraseña ingresada en el campo de texto

    // Crear una instancia de la clase CConexion
    CConexion objetoConexion = new CConexion(); 
    Connection conn = objetoConexion.establecerConexion(); // Establecer la conexión con la base de datos
    
    if (conn != null) {
        try {
            // Consulta SQL para validar usuario y contraseña
            String sql = "SELECT * FROM tblUsuariosLogin WHERE Correo_Usuario = ? AND Correo_Clave = ?";
            PreparedStatement pst = conn.prepareStatement(sql);
            pst.setString(1, correo); // Asignar correo al parámetro
            pst.setString(2, contraseña); // Asignar contraseña al parámetro

            // Ejecutar la consulta
            ResultSet rs = pst.executeQuery();

            // Validar si las credenciales coinciden
            if (rs.next()) {
                // Obtener el tipo de usuario (Paciente o Medico)
                int idUsuario = rs.getInt("idUsuario"); 
                String tipoUsuario = rs.getString("tipoUsuario"); // Cambié a "tipoUsuario" según lo que aparece en tu base de datos
                //Almacenar el idUsuarioLogueado en la clase Sesion Usuario
                SesionUsuario.setIdUsuarioLogueado(idUsuario);
                // Redirigir a la interfaz correspondiente
                if ("Paciente".equals(tipoUsuario)) {
                    // Si el usuario es paciente, abrir la interfaz PacienteCitasView
                    PacienteCitasView pacienteVista = new PacienteCitasView();
                    pacienteVista.setVisible(true);
                    this.setVisible(false); // Cerrar la ventana de login
                    /*
                } else if ("Medico".equals(tipoUsuario)) {
                    // Si el usuario es medico, abrir la interfaz MedicoCitasView
                    MedicoCitasView medicoVista = new MedicoCitasView();
                    medicoVista.setVisible(true);
                    this.setVisible(false); // Cerrar la ventana de login
                    */
                } else {
                    // Si el tipo de usuario no es ni Paciente ni Medico
                    javax.swing.JOptionPane.showMessageDialog(this, 
                        "Tipo de usuario desconocido.", 
                        "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
                }

                /*Mostrar mensaje de éxito
                javax.swing.JOptionPane.showMessageDialog(this, 
                    "¡Login exitoso! Bienvenido: " + correo, 
                    "Éxito", javax.swing.JOptionPane.INFORMATION_MESSAGE);
                */
            } else {
                javax.swing.JOptionPane.showMessageDialog(this, 
                    "Correo o contraseña incorrectos.", 
                    "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
            }

            // Cerrar conexiones
            rs.close();
            pst.close();
            conn.close();
        } catch (Exception e) {
            javax.swing.JOptionPane.showMessageDialog(this, 
                "Error al procesar la consulta: " + e.getMessage(), 
                "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
            e.printStackTrace();
        }
    } else {
        javax.swing.JOptionPane.showMessageDialog(this, 
            "No se pudo establecer conexión con la base de datos.", 
            "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
    }
        
           
    }                                    

    private void RegisterLabelMouseClicked(java.awt.event.MouseEvent evt) {                                           
        RegisterLabel.setForeground(new Color(11,136,230)); 
    
         // Abrir la ventana de registro
        RegistroView Registro = new RegistroView(); 
        Registro.setVisible(true); 
        this.setVisible(false);
    }                                          

