    private void HeaderMousePressed(java.awt.event.MouseEvent evt) {                                    
       
        xMouse = evt.getX();
        yMouse = evt.getY();
    }                                   

    private void HeaderMouseDragged(java.awt.event.MouseEvent evt) {                                    
        // Para arrastrar la interfaz grafica
        int x = evt.getXOnScreen();
        int y = evt.getYOnScreen();
        this.setLocation(x- xMouse,y- yMouse);
    }                                   

    private void ExitMouseClicked(java.awt.event.MouseEvent evt) {                                  
        System.exit(0);
    }                                 

    private void ExitMouseEntered(java.awt.event.MouseEvent evt) {                                  
        Volver.setBackground(Color.red);
    }                                 

    private void ExitMouseExited(java.awt.event.MouseEvent evt) {                                 
        Volver.setBackground(new Color(51,51,51));
    }                                

    private void RegistrarLoginMouseClicked(java.awt.event.MouseEvent evt) {                                            
   // Capturar datos ingresados por el usuario
        String nombre = NombreTxt.getText(); // Nombre ingresado
        String apellido = ApellidoTxt.getText(); // Apellido ingresado
        String usuario = UsuarioTxt.getText(); // Nombre de usuario ingresado
        String contraseña = String.valueOf(PasswordTxt.getPassword()); // Contraseña ingresada
        String confirmarContraseña = String.valueOf(PasswordTxt1.getPassword()); // Confirmar contraseña ingresada
        
        if(nombre.isEmpty() || apellido.isEmpty() || usuario.isEmpty() || contraseña.isEmpty() ||confirmarContraseña.isEmpty() ){
             
            javax.swing.JOptionPane.showMessageDialog(this,
                "Debe rellenar los campos.",
                "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
            return; // Salir de la función para evitar la inserción
        }
            
        
        
        // Validar si las contraseñas coinciden
        if (!contraseña.equals(confirmarContraseña)) {
            // Si las contraseñas no son iguales, mostrar un mensaje
            javax.swing.JOptionPane.showMessageDialog(this,
                "Las contraseñas no coinciden. Por favor, ingréselas nuevamente.",
                "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
            return; // Salir de la función para evitar la inserción
        }

        // Crear una instancia de la clase CConexion para establecer la conexión con la base de datos
        CConexion objetoConexion = new CConexion();
        Connection conn = objetoConexion.establecerConexion();
        
        //validar si se conecto a la base de datos
        if (conn != null) {
            try {
                // Consulta SQL para insertar los datos del usuario en la tabla
                String sql = "INSERT INTO tblUsuariosLogin (Nombre, Apellido, Correo_Usuario, Correo_Clave) VALUES (?, ?, ?, ?)";
                PreparedStatement pst = conn.prepareStatement(sql);
                pst.setString(1, nombre); // Asignar nombre al primer parámetro
                pst.setString(2, apellido); // Asignar apellido al segundo parámetro
                pst.setString(3, usuario); // Asignar usuario al tercer parámetro
                pst.setString(4, contraseña); // Asignar contraseña al cuarto parámetro

                // Ejecutar la consulta de inserción
                int filasAfectadas = pst.executeUpdate();

                // Validar si la inserción fue exitosa
                if (filasAfectadas > 0) {
                    javax.swing.JOptionPane.showMessageDialog(this,
                        "¡Usuario registrado con éxito! Puedes iniciar sesión ahora.",
                        "Éxito", javax.swing.JOptionPane.INFORMATION_MESSAGE);
                } else {
                    javax.swing.JOptionPane.showMessageDialog(this,
                        "Hubo un error al registrar al usuario.",
                        "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
                }

                // Cerrar conexiones
                pst.close();
                conn.close();

            } catch (Exception e) {
                javax.swing.JOptionPane.showMessageDialog(this,
                    "Error al procesar la consulta: " + e.getMessage(),
                    "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
                e.printStackTrace();
            }
        } else {
            javax.swing.JOptionPane.showMessageDialog(this,
                "No se pudo establecer conexión con la base de datos.",
                "Error", javax.swing.JOptionPane.ERROR_MESSAGE);
        }
    }                                           

    private void RetrocederMouseClicked(java.awt.event.MouseEvent evt) {                                        
        Retroceder.setForeground(new Color(11,136,230)); 
    
         // Abrir la ventana de registro
        LoginView Retroceder = new LoginView(); 
        Retroceder.setVisible(true); 
        this.setVisible(false);
    }                                       

